{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "shared/*": ["libs/shared/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
} 